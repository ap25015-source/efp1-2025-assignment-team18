@startuml class
class Customer {
  +customer_id: int
  +fitting_room_id: int
  +loyalty_card: int
  +request_support:str
}
 
class Employee {
  +employee_id: int
  +availability: str
}
 
class ClothingItem {
  +barcode: int
  +description: str
  +brand: str
  +photos:list
  +available_colors: str
  +price: float
}

class SupportSystem {
  +customer
  +employee
  +clothingitem
  +sends_support_message()
  +available_employee()
  +help_succeed()
  +sends_clothing_information()
  +sends_request()
  +responds_to_request()
}
 
ClothingItem "1..*" -- "1" Customer
Employee "0..1" -- "1" Customer
@enduml